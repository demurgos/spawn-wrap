{
  "name": "spawn-wrap",
  "version": "1.4.2",
  "description": "Wrap all spawned Node.js child processes by adding environs and arguments ahead of the main JavaScript file argument.",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "dependencies": {
    "@types/cross-spawn": "^6.0.0",
    "@types/is-windows": "^0.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/os-homedir": "^1.0.0",
    "@types/rimraf": "^2.0.2",
    "@types/which": "^1.3.1",
    "cross-spawn": "^6.0.5",
    "demurgos-foreground-child": "^1.6.0-beta.0",
    "is-windows": "^1.0.2",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "rxjs-stream": "^3.0.1",
    "signal-exit": "^3.0.2",
    "which": "^1.3.1"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "tsc -p src/lib",
    "clean": "rm -rf ~/.node-spawn-wrap",
    "posttest": "standard && npm run tslint",
    "postpublish": "git push origin --all; git push origin --tags",
    "postversion": "npm publish",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "preversion": "npm test",
    "test": "tap --timeout=240 \"test/*.js\"",
    "tslint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaacs/spawn-wrap.git"
  },
  "author": "Isaac Z. Schlueter <i@izs.me> (http://blog.izs.me/)",
  "contributors": [
    "Charles Samborski <demurgos@demurgos.net> (https://demurgos.net)"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/isaacs/spawn-wrap/issues"
  },
  "homepage": "https://github.com/isaacs/spawn-wrap#readme",
  "devDependencies": {
    "@types/node": "^10.12.10",
    "standard": "^12.0.1",
    "tap": "^12.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "files": [
    "build",
    "src",
    "CONTRIBUTING.md",
    "README.md",
    "LICENSE.md"
  ]
}
