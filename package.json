{
  "name": "spawn-wrap",
  "version": "1.4.2",
  "description": "Wrap all spawned Node.js child processes by adding environs and arguments ahead of the main JavaScript file argument.",
  "main": "build/lib/index.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@types/cross-spawn": "^6.0.0",
    "@types/is-windows": "^0.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/os-homedir": "^1.0.0",
    "@types/rimraf": "^2.0.2",
    "@types/which": "^1.3.1",
    "cross-spawn": "^6.0.5",
    "foreground-child": "^1.5.6",
    "is-windows": "^1.0.2",
    "mkdirp": "^0.5.0",
    "os-homedir": "^1.0.1",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "rxjs-stream": "^2.0.3",
    "signal-exit": "^3.0.2",
    "which": "^1.3.0"
  },
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "tsc -p src/lib",
    "clean": "rm -rf ~/.node-spawn-wrap",
    "posttest": "standard && npm run tslint",
    "postpublish": "git push origin --all; git push origin --tags",
    "postversion": "npm publish",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "preversion": "npm test",
    "test": "tap \"test/*.js\"",
    "tslint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/istanbuljs/spawn-wrap.git"
  },
  "author": "Isaac Z. Schlueter <i@izs.me> (http://blog.izs.me/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/istanbuljs/spawn-wrap/issues"
  },
  "homepage": "https://github.com/istanbuljs/spawn-wrap#readme",
  "devDependencies": {
    "@types/node": "^10.7.0",
    "standard": "^11.0.1",
    "tap": "^13.1.6",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "files": [
    "build",
    "src"
  ],
  "standard": {
    "ignore": [
      "lib/node-internals"
    ]
  },
  "tap": {
    "coverage": false,
    "timeout": 240
  }
}
